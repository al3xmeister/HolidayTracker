<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HolidayTracker.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:HolidayTracker.Converters"
    xmlns:models="clr-namespace:HolidayTracker.Models"
    xmlns:viewmodels="clr-namespace:HolidayTracker.ViewModels"
    Title="Overview"
    x:DataType="viewmodels:HomeViewModel">

    <Grid RowDefinitions="Auto,*, Auto">

        <Label
            Grid.Row="0"
            Margin="0,10"
            FontSize="20"
            HorizontalOptions="Center"
            Text="{Binding CurrentMonthDisplay,
                           StringFormat='Showing best dates for {0}'}" />

        <HorizontalStackLayout
            Grid.Row="2"
            Margin="0,10"
            HorizontalOptions="Center"
            Spacing="10">
            <Button
                Command="{Binding LoadPreviousMonthCommand}"
                HorizontalOptions="Center"
                Text="Previous month" />
            <Button
                Command="{Binding LoadNextMonthCommand}"
                HorizontalOptions="Center"
                Text="Next month" />
        </HorizontalStackLayout>

    </Grid>
</ContentPage>

